extends layout 

block content 
  if currentUser 
    p.text-5xl.text-rose-600.text-center.mt-10 You are already logged in you nitwit. Logout if you want to sign in with a different account.
  else 
    form(method="POST" class="flex flex-col gap-y-10 sm:w-2/3 lg:w-1/3 w-5/6 mx-auto bg-blue-400/10 rounded-lg py-10 shadow-md shadow-blue-300/50")
      h1.text-center.text-amber-300.font-mont(class="xl:text-3xl text-lg") Login
      .input-group.flex.flex-col.justify-center.items-center.px-5(class="sm:flex-row")
        label(for="username")(class="xl:text-xl text-md text-center sm:text-left mb-3") Username
        input(type="text" required autocomplete="off" id="username" name="username" autofocus value=(undefined===user ? '' : user.username))
      .input-group.flex.flex-col.justify-center.items-center.px-5(class="sm:flex-row")
        label(for="password")(class="xl:text-xl text-md text-sm text-center sm:text-left mb-3") Password
        input(type="password" required autocomplete="off" id="password" name="password")
      button(type="submit")(class="submitBtn bg-amber-400 hover:bg-amber-300 transition-all duration-150 text-black py-2 w-28 xl:text-xl text-md text-sm mx-auto rounded-md") Log In

      if error
        p.py-2(class="text-center bg-rose-600/80 sm:text-xl text-base")= error
    