extends layout 

block content 
  if currentUser
    div#characterContentContainer(class="mx-10 font-mont")
      div.first-row.flex.justify-between.items-center.mb-4.border-b-2.border-white
        div.flex.justify-center.items-center.gap-x-10.align-bottom
          h1.text-5xl.text-indigo-400 #{character.name}
          h1.text-3xl.relative.top-1 Level #{character.level} #{character.race} #{character.class}
        div.flex.gap-x-10.items-center.align-bottom.justify-center
          h1.text-3xl #{character.background}, #{character.alignment}
      div.second-row.flex.justify-between.items-center(class="")
        div.flex.flex-col.gap-5.text-lg
          div.flex.gap-5.items-center
            p.text-cyan-300.text-2xl Inspiration:
            span(class="bg-white/15 shadow-md shadow-cyan-300/30 py-2 px-4 rounded-sm") #{character.inspiration} 
          div.flex.gap-5.items-center
            p.text-cyan-300.text-2xl Proficiency Bonus:
            span(class="bg-white/15 shadow-md shadow-cyan-300/30 py-2 px-4 rounded-sm") #{character.proficiencyBonus} 
        div.flex.gap-10.text-xl
          div.text-center.flex.flex-col.gap-3
            p.text-3xl.text-cyan-300 Armor Class 
            p(class="bg-white/15 shadow-md shadow-cyan-300/30 py-2 px-4 rounded-sm")= character.armorClass
          div.text-center.flex.flex-col.gap-3
            p.text-3xl.text-cyan-300 Initiative 
            p(class="bg-white/15 shadow-md shadow-cyan-300/30 py-2 px-4 rounded-sm")= character.initiative
          div.text-center.flex.flex-col.gap-3
            p.text-3xl.text-cyan-300 Speed
            p(class="bg-white/15 shadow-md shadow-cyan-300/30 py-2 px-4 rounded-sm")= character.speed
        div.flex.flex-col.gap-5.text-lg
          p.text-xl.text-cyan-300.flex.gap-20.items-center.justify-between Current Hitpoints: 
            span(class="bg-white/15 shadow-md shadow-cyan-300/30 py-2 px-4 rounded-sm") #{character.currentHP} / #{character.maxHP}
          p.text-xl.text-cyan-300.flex.gap-20.items-center.justify-between Temporary Hitpoints: 
            span(class="bg-white/15 shadow-md shadow-cyan-300/30 py-2 px-4 rounded-sm")= character.temporaryHP
          p.text-xl.text-cyan-300.flex.gap-20.items-center.justify-between Hit Dice: 
            span(class="bg-white/15 shadow-md shadow-cyan-300/30 py-2 px-4 rounded-sm")= character.hitDice

  else 
    p.text-5xl.text-rose-600.text-center.mt-10 You do not have permission to access this page.